<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <title>NodejsBasic</title>
</head>

<body>
  <div class="topnav">
    <a class="active" href="#home">Home</a>
    <a href="/upload">Upload file</a>
  </div>
  <div class="list-users">
    <div class="w3-container">
      <h2>List Users Table</h2>
      <table class="w3-table-all w3-hoverable">
        <thead>
          <tr class="w3-light-grey">
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i=0; i < dataUser.length; i++) { %>
            <tr>
              <td>
                <%= dataUser[i].id %>
              </td>
              <td>
                <%= dataUser[i].firstName %>
              </td>
              <td>
                <%= dataUser[i].lastName %>
              </td>
              <td>
                <div class="crud-button">
                  <a class="list-users__link" href="/detail/user/<%= dataUser[i].id %>">Detail</a>
                  <a class="list-users__link" href="/edit/user/">Edit</a>
                  <form action="/delete-user" method="post">
                    <input type="text" hidden value="<%= dataUser[i].id %>" name="userId">
                    <button class="delete-button" type="submit">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="create-user-container">
    <h2>Create a new user:</h2>
    <form action="/create-new-user" method="post" class="form">
      <div class="form__row">
        <label class="form-label" for="firstName">FirstName: </label>
        <input class="form-input" type="text" name="firstName" id="firstName" placeholder="Vui lòng nhập tên...">
      </div>
      <div class="form__row">
        <label class="form-label" for="lastName">LastName: </label>
        <input class="form-input" type="text" name="lastName" id="lastName" placeholder="Vui lòng nhập họ...">
      </div>
      <div class="form__row">
        <label class="form-label" for="email">Email: </label>
        <input class="form-input" type="email" name="email" id="email" placeholder="Vui lòng nhập email...">
      </div>
      <div class="form__row">
        <label class="form-label" for="address">Address: </label>
        <input class="form-input" type="text" name="address" id="address" placeholder="Vui lòng nhập địa chỉ...">
      </div>
      <div class="form-button">
        <button type="submit">Submit</button>
      </div>
    </form>

  </div>

</body>

</html>